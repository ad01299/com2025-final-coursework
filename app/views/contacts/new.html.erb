<section class="form-auth text-center">
  <%= form_for @contact do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Send Email</h1>
    <% if flash[:error].present? %>
        <p> flash[:error]</p>
    <% end %>
    <%= f.text_field :name, class: "form-control", placeholder: "Full Name" %>

    <br>
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>

    <br>

    <%= f.text_field :subject, class: "form-control", placeholder: "Subject" %>
    
    <br>
    <%= f.text_area :message, class: "form-control", placeholder: "Message" %>

    <br>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Send Email</button>
 
  <% end %>